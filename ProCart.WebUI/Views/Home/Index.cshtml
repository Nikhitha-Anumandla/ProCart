@model IEnumerable<ProCart.core.Models.Products>

@{
    ViewBag.Title = "Home Page";
}
<h2>
    Products
</h2>
<hr />
@foreach(var m in Model)
{
    <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border:solid thin white">
        <div class="col-md-12">
            <img class="img" style="height:250px" src="~/ProductImages/@m.Image"/>
        </div>
        <div class="col-md-12">
            <strong>@Html.ActionLink(m.Name,"Details",new { id = m.id })</strong>
        </div>
        <div class="col-md-12">
            <h4>
                @m.Description
            </h4>
        </div>
        <div class="col-md-12">
            <h4>
                @m.Price
            </h4>
        </div>
        <div class="col-md-12">
            <a href="#" class="btn btn-info">Add to basket</a>
        </div>
    </div>
}
<div class="col-md-12 clearfix"/>
