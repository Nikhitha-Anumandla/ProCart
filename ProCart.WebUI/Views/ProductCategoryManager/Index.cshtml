@model IEnumerable<ProCart.core.Models.ProductCategories>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categories)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categories)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { id=item.id }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id=item.id })
        </td>
    </tr>
}

</table>
